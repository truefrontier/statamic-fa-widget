{
  "name": "itiden/statamic-fa-widget",
  "description": "Statamic addon to add a widget with statistics from Fathom Analytics",
  "license": "MIT",
  "type": "statamic-addon",
  "keywords": [
    "laravel",
    "statamic",
    "fathom analytics"
  ],
  "require": {
    "php": "^8.0",
    "statamic/cms": "^3.1 || ^4.0",
    "pixelfear/composer-dist-plugin": "^0.1.4"
  },
  "autoload": {
    "psr-4": {
      "Itiden\\FA\\": "src"
    }
  },
  "extra": {
    "statamic": {
      "name": "Statamic FA Widget",
      "description": "Addon to to add a widget with statistics from Fathom Analytics"
    },
    "laravel": {
      "providers": [
        "Itiden\\FA\\ServiceProvider"
      ]
    },
    "download-dist": {
      "url": "https://github.com/truefrontier/statamic-fa-widget/releases/download/{$version}/dist.tar.gz",
      "path": "resources/dist"
    }
  },
  "config": {
    "allow-plugins": {
      "pixelfear/composer-dist-plugin": true
    }
  },
  "require-dev": {
    "laravel/pint": "^1.10"
  }
}
